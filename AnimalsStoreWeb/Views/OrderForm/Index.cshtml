@using AnimalsStoreWeb.Models
@model AnimalsStoreWeb.Models.shop_items

@{
    orders order = new orders()
    {
        email = "Ebobola",
        shop_item_id = Model.id,
        count = 2,
        fixed_price = Model.price * 2,
        status = 2
    };
}

<p>Оформление покупки</p>
<p>Наименование товара: @Model.name</p>
<p>Стоимость за штуку: @Model.price</p>
<button>@Html.ActionLink("Принять", "RegistrateOrder", order)</button>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="~/Content/css/stylesRegistrateOrder.css">
    <title>Document</title>
</head>
<body>
    <main>
        <div class="serviceblock">
            <p class="service">@Model.name</p>
            <br>
            <span class="price" id="price" value="30"> Цена :@Math.Round(@Model.price, 0) р</span>
            <br>
            <br />
            <input type="text" name="email" class="email" placeholder="Электронная почта">
            <br>
            <br>
            <br>
            <input type="text" name="amount" class="amount" id="amount" onchange="ChangePrice()" placeholder="Количество">
            <p class="finprice">Итого:</p>
            <br />
            <span name="finalprice" id="finalprice" class="finprice"></span>
            <br>
            <button id="toggle" class="savebtn">@Html.ActionLink("Принять", "RegistrateOrder", order)</button>
        </div>
        <script type="text/javascript">
        function ChangePrice() {
            var first = document.getElementById('amount').value;
            document.getElementById('finalprice').innerHTML = first * @Model.price + " р";
        }
        </script>
    </main>
</body>
</html>